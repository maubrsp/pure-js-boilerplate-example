<% 
var params = templateParams
var patch = params.patch
var arr = params.image.src.split(",")
var extension = '.'+ arr[0].split('.')[1]
var src = patch + arr[0].split('.')[0];
var srcset = patch + arr.join("," + patch);
var classCss = params.class || "img";

%>
<picture class="<%=classCss%>">
    
        <% if (params.image.type === "one") { %>
        
         <% } %>
       
        <% if (params.image.type === "mlt") { %>
        <source srcset="<%=src%>_420<%=extension%>" media="(max-width: 400px) and (orientation: portrait)">
        <source srcset="<%=src%>_800<%=extension%>" media="(max-width: 800px) and (orientation: portrait)">
        <source srcset="<%=src%>_1200<%=extension%>" media="(max-width: 1180px) and (orientation: portrait)">
        <source srcset="<%=src%>_1500<%=extension%>" media="(max-width: 3000px) and (orientation: portrait)">
        <% } %>
       
        <% if (params.image.type === "mob") { %>
                <source srcset="<%=src%>_420P<%=extension%>" media="(max-width: 400px) and (orientation: portrait)">
        <source srcset="<%=src%>_800P<%=extension%>" media="(max-width: 800px) and (orientation: portrait)">
        <source srcset="<%=src%>_1200P<%=extension%>" media="(max-width: 1180px) and (orientation: portrait)">
        <source srcset="<%=src%>_1500P<%=extension%>" media="(max-width: 3000px) and (orientation: portrait)">
        <source srcset="<%=src%>_420L<%=extension%>" media="(max-width: 400px) and (orientation: landscape)">
        <source srcset="<%=src%>_800L<%=extension%>" media="(max-width: 800px) and (orientation: landscape)">
        <source srcset="<%=src%>_1200L<%=extension%>" media="(max-width: 1180px) and (orientation: landscape)">
        <source srcset="<%=src%>_1500L<%=extension%>" media="(max-width: 3000px) and (orientation: landscape)">             
         <% } %>

    <img srcset="<%=src%><%=extension%>" alt="params.image.alt">
</picture>
